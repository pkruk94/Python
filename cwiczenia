;;Zadanie2

;; stos jako lista

(define (stack? s)
  (list? s))

(define (push e s)
  (cons e s))

(define (pop s) (cdr s))

(define (top s) (car s))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;Zadanie3

(define (eval-rpn e)
  (define (operation op a b)
    ((op->proc op) b a))
  (define (eval f stack)
    (cond [(null? f) (car stack)]
          [(const? (car f)) (eval (cdr f) (push (car f) stack))]
          [else (eval (cdr f) (cons (operation (binop-op f) (top stack) (top (pop stack)))
                                                  (pop (top stack) (pop (top stack)) stack)))]))
  (eval e null))

